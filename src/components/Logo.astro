---
import { SITE } from 'astrowind:config';
import Image from '~/components/common/Image.astro';
---

<span
  class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
>
  <Image
    class="mx-auto rounded-md w-full max-w-[600px] h-auto"
    widths={[300, 400, 600]}
    sizes="(max-width: 767px) 300px, (max-width: 1023px) 400px, 600px"
    loading="eager"
    width={100}
    height={100}
    src="~/assets/images/logo3DGS.svg"
    alt="3D General Services Ltd"
  />
</span>
